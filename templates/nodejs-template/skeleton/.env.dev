# Development Environment Configuration
NODE_ENV=development
PORT=3001
LOG_LEVEL=debug

# GCP Configuration for Dev
GCP_REGION=${{ '${{' }} secrets.GCP_REGION }}
GCP_PROJECT_ID=${{ '${{' }} secrets.GCP_PROJECT_ID }}

# Database Configuration (if using database infrastructure)
{% if values.infraDatabase === 'mysql' %}DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_NAME=${{ values.component_id }}_dev
DB_USER=root
DB_PASSWORD=
{% elif values.infraDatabase === 'postgresql' %}DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=${{ values.component_id }}_dev
DB_USER=postgres
DB_PASSWORD=
{% endif %}

# Cloud Storage Configuration (if using storage infrastructure)
{% if values.infraStorage %}STORAGE_BUCKET_NAME=${{ values.component_id }}-dev-storage
STORAGE_BUCKET_REGION=us-central1
{% endif %}

# Service Configuration
SERVICE_VERSION=dev
SERVICE_REPLICAS=1
{% if values.deploymentType === 'cloudrun' %}MAX_INSTANCES=3
MEMORY=256Mi
CPU=0.5
{% else %}# GKE Configuration
K8S_NAMESPACE=${{ values.gkeNamespace }}
K8S_REPLICAS=2
{% endif %}
